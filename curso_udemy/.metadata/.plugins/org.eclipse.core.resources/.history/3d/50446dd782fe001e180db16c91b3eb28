
public class Aluno {

	String nome;
	String matricula;
	
	
	
	
  void mediaDasNotas(double nota1,double nota2,double nota3,double nota4) 
  {
		double media;
		media = (nota1 + nota2 + nota3+ nota4) / 4;
	    System.out.println("a média é "+ media);
  }
	
  
	void situaçãoDoAluno(double media) 
	{
		if(media >= 5) {
			System.out.println("o aluno está aprovado");
		
		}
		else {
			System.out.println("o aluno está reprovado");
		}
	}
	
}
